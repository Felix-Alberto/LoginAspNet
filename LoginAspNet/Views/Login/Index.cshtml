@model LoginModel
@{
    Layout = "_LayoutDeslogado";
}

<section>
    <form  action="">
        <div class="form-box">
            <h2>Login</h2>

            <!-- Email input -->
            <div class="form-outline mb-4">
                <ion-icon name="mail-outline"></ion-icon>
                <input type="email" aria-autocomplete="list" required />
                <label class="form-label" for="">Email</label>
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
                <ion-icon name="lock-closed-outline"></ion-icon>
                <input type="password"  required />
                <label class="form-label" for="">Password</label>
            </div>

            <!-- 2 column grid layout for inline styling -->
            <div class="forget row mb-4">
                <div class="col d-flex justify-content-center">
                    <!-- Checkbox -->
                    <div class="form-check">
                        <input class="" type="checkbox" value="" id="" checked />
                        <label class="" for=""> Lembre de mim </label>
                    </div>
                </div>

                <div class="col">
                    <!-- Simple link -->
                    <a href="#!">Esqueceu sua senha?</a>
                </div>
            </div>

            <!-- Submit button -->
            <button type="button" class="">Log in</button>

            <!-- Register buttons -->
            @*<div class="text-center">*@
            <div class="register">
                <p>Não é um membro? <a href="#!">Registrar</a></p>

            </div>
        </div>
    </form>
</section>

                    