@model LoginModel
@{
    Layout = "_LayoutDeslogado";
}
<section>
    <form action="">
        <div class="form-box">
            <h2>Login</h2>

            <!-- Email input -->
            <div class="form-outline mb-4">
                <ion-icon name="mail-outline"></ion-icon>
                <input type="email" id="form2Example1" class="form-control" required />
                <label class="form-label" for="form2Example1">Email address</label>
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
                <ion-icon name="lock-closed-outline"></ion-icon>
                <input type="password" id="form2Example2" class="form-control" required />
                <label class="form-label" for="form2Example2">Password</label>
            </div>

            <!-- 2 column grid layout for inline styling -->
            <div class="row mb-4">
                <div class="col d-flex justify-content-center">
                    <!-- Checkbox -->
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                        <label class="form-check-label" for="form2Example31"> Lembre de mim </label>
                    </div>
                </div>

                <div class="col">
                    <!-- Simple link -->
                    <a href="#!">Esqueceu sua senha?</a>
                </div>
            </div>

            <!-- Submit button -->
            <button type="button" class="btn btn-primary btn-block mb-4">Log in</button>

            <!-- Register buttons -->
            @*<div class="text-center">*@
            <div class="register">
                <p>Não é um membro? <a href="#!">Registrar</a></p>

            </div>
        </div>
    </form>
</section>